{
  "variables": {
    "kafka_home": "/opt/apache-kafka",
    "kafka_version": "0.10.1.0",
    "kafka_scala_version": "2.11",
    "kafka_logs_dir": "/tmp/kafka-logs"
  },
  "builders": [
    {
      "type": "docker",
      "image": "openjdk:8-jre",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "install.sh",
      "environment_vars": [
        "KAFKA_PKG=kafka_{{user `kafka_scala_version`}}-{{user `kafka_version`}}",
        "KAFKA_URL=http://apache.uib.no/kafka/{{user `kafka_version`}}/kafka_{{user `kafka_scala_version`}}-{{user `kafka_version`}}.tgz",
        "KAFKA_HOME={{user `kafka_home`}}"
      ]
    },
    {
      "type": "file",
      "source": "docker-entrypoint.sh",
      "destination": "/docker-entrypoint.sh"
    },
    {
      "type": "shell",
      "inline": "chmod +x /docker-entrypoint.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "jeqo/apache-kafka",
        "tag": "{{user `kafka_version`}}_{{user `kafka_scala_version`}}"
      },
      {
        "type": "docker-dockerfile",
        "maintainer": "Jorge Quilcate <quilcate.jorge@gmail.com>",
        "workdir": "{{user `kafka_home`}}",
        "expose": ["9092"],
        "env": {
          "ZOOKEEPER_CONNECT": "zookeeper:2181",
          "LOG_DIRS": "{{user `kafka_logs_dir`}}",
          "NUM_PARTITION": "1"
        },
        "volume": ["{{user `kafka_logs_dir`}}"],
        "entrypoint": ["/docker-entrypoint.sh"],
        "cmd": ["bin/kafka-server-start.sh", "config/server.properties"]
      },
      "docker-push"
    ]
  ]
}
